<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/s_not_available_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/sna_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:alpha="0.9"
        android:contentDescription="@string/sensor_not_available_image"
        android:minWidth="24dp"
        app:layout_constraintEnd_toStartOf="@+id/sna_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sna_text"
        app:srcCompat="@android:drawable/ic_dialog_alert"
        app:tint="#AA5500" />

    <TextView
        android:id="@+id/sna_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        android:text="@string/sensor_not_available"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sna_img"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>